<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_flights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/cardView_flights_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/cardView_flights_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/cardView_flights_image"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/cardView_flights_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView_flights_source"
                android:layout_toRightOf="@+id/cardView_flights_image"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/cardView_flights_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView_flights_destination"
                android:layout_toRightOf="@+id/cardView_flights_image"
                android:textSize="18sp" />

            <Button
                android:id="@+id/cardView_flights_button_editFlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cardView_flights_price"
                android:layout_alignParentEnd="true"
                android:text="Edit" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>